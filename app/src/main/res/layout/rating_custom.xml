<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
                android:orientation="vertical"
              android:layout_height="wrap_content"
              android:background="@color/colorGray">



        <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:background="@color/colorWhite"
                      android:orientation="vertical">
            <com.dd.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:sl_shadowColor="#49b0ec"
                app:sl_dx="2dp"
                app:sl_dy="2dp"
                app:sl_shadowRadius="0.8dp">
               <!-- <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                  ></LinearLayout>-->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>





            </com.dd.ShadowLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fifteen_dp"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_user"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/uuu"
                    app:civ_border_color="#AAA"
                    app:civ_border_width="2dp"/>


                <TextView android:id="@+id/txt_user_name"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="18dp"
                          android:layout_marginTop="25dp"
                          android:text="Name"
                          android:textColor="@android:color/black"
                          android:textSize="@dimen/twenty_sp"
                          android:textStyle="bold"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:minHeight="38dp"
                android:orientation="horizontal"
                android:weightSum="3"
            >
                <TextView android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginLeft="5dp"
                          android:layout_weight="0.4"
                          android:text="RATED"
                          android:textColor="#AAA"
                          android:textSize="@dimen/twelve_sp"/>


                <RelativeLayout
                    android:id="@+id/rl_rating"
                    android:layout_width="0dp"
                    android:layout_height="25dp"
                    android:layout_gravity="top"
                    android:layout_marginTop="6dp"
                    android:layout_weight="0.33"
                    android:background="@drawable/rating_bg_green"
                    android:gravity="center">
                    <TextView android:id="@+id/one_txt"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:text="4.9"
                              android:textColor="#306200"
                              android:textSize="@dimen/ten_sp"

                              android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/star1"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginTop="2dp"
                        android:layout_toRightOf="@+id/one_txt"
                        android:background="@drawable/start_green"
                        android:textSize="@dimen/ten_sp"
                        android:textStyle="bold"/>
                </RelativeLayout>
                <TextView android:id="@+id/txt_time"
                          android:layout_width="0dp"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginLeft="5dp"
                          android:layout_weight="2.1"
                          android:gravity="end"
                          android:text="Time"
                          android:textColor="#AAA"
                          android:textSize="@dimen/twelve_sp"/>

            </LinearLayout>


            <TextView
                android:id="@+id/txt_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:maxLength="200"
                android:text="Comment"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sixteen_sp" />
            <com.dd.ShadowLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                app:sl_shadowColor="#49b0ec"
                app:sl_dx="2dp"
                app:sl_dy="2dp"
                app:sl_shadowRadius="0.8dp">
                <!-- <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="0.5dp"
                   ></LinearLayout>-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"></View>





            </com.dd.ShadowLayout>

        </LinearLayout>
</RelativeLayout>

